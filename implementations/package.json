{
  "name": "@erc725/smart-contracts",
  "version": "3.1.1",
  "description": "ERC725 contract implementations",
  "homepage": "https://erc725alliance.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/ERC725Alliance/ERC725.git",
    "directory": "implementations"
  },
  "files": [
    "contracts/**/*.sol",
    "!contracts/helpers/*.sol",
    "artifacts/ILSP*.json",
    "artifacts/ERC725*.json",
    "!artifacts/ERC725YReader.json",
    "!artifacts/ERC725YWriter.json",
    "constants.js",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "solhint 'contracts/**/*.sol'",
    "test": "truffle test",
    "test:coverage": "truffle run coverage",
    "solc": "sh solc.sh",
    "release": "truffle compile --all; npm run package && standard-version",
    "package": "node reduce-artifacts.js"
  },
  "author": "Fabian Vogelsteller <fabian@lukso.network>",
  "license": "Apache-2.0",
  "dependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "solidity-bytes-utils": "0.8.0"
  },
  "devDependencies": {
    "@truffle/config": "^1.3.12",
    "chai": "^4.2.0",
    "coveralls": "^3.1.1",
    "eth-create2-calculator": "^1.1.5",
    "eth-gas-reporter": "^0.2.19",
    "openzeppelin-test-helpers": "^0.4.2",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solc": "^0.4.26",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.20",
    "standard-version": "^9.3.1",
    "truffle": "^5.2.5"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 99,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false,
          "explicitTypes": "always"
        }
      }
    ]
  }
}
